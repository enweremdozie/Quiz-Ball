<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="united_kingdom" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#B71C1C</item>
        <item name="colorAccent">#F44336</item>
    </style>

    <style name="spain" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFEB3B</item>
        <item name="colorPrimaryDark">#F9A825</item>
        <item name="colorAccent">#FFEB3B</item>
    </style>

    <style name="germany" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#757575</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#757575</item>
    </style>
</resources>
